{
  "manifest_version": 3,
  "name": "Screeshot & Describe",
  "version": "1.0.2",
  "description": "Capture the full webpage and get a description from ChatGPT.",
  "permissions": ["scripting", "activeTab", "storage", "contextMenus", "tabs","notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  
  "options_page": "options.html",
  "web_accessible_resources": [
    {
        "resources": ["/icon.jpeg"],
        "matches": ["<all_urls>"]
    }
],
"content_scripts": [
  {
    "matches": ["<all_urls>"], 
    "js": ["content.js"]
  }
],
"icons": {
	"16": "/icon.png",
    "32": "/icon.png",
    "48": "/icon.png",
    "128": "/icon.png"
  }
}